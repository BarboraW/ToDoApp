@page
@using ToDoAppClient.Models;
@model ToDoAppClient.Pages.UpdateTaskModel

<h1>Update Task</h1>

<form method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input type="hidden" asp-for="UpdatedTask.Id" />

    <div class="form-group">
        <label asp-for="UpdatedTask.Name" class="control-label"></label>
        <input asp-for="UpdatedTask.Name" class="form-control" />
        <span asp-validation-for="UpdatedTask.Name" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="UpdatedTask.Priority" class="control-label"></label>
        <input asp-for="UpdatedTask.Priority" class="form-control" />
        <span asp-validation-for="UpdatedTask.Priority" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="UpdatedTask.Status" class="control-label">Status:</label>
        <span asp-validation-for="UpdatedTask.Status" class="text-danger"></span>
        <select asp-for="UpdatedTask.Status" class="form-control" id="Status" name="UpdatedTask.Status">
            <option value="@Status.NotStarted">Not started</option>
            <option value="@Status.InProgress">In progress</option>
            <option value="@Status.Completed">Completed</option>
        </select>
    </div>

    <div class="form-group">
        <button type="submit" class="btn btn-primary">Update</button>
    </div>
</form>