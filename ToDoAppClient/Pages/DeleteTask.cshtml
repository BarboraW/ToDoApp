@page
@model DeleteTaskModel
@{
    ViewData["Title"] = "Delete Task";
}

<h1>Delete Task</h1>

<p>Are you sure you want to delete this task?</p>

<div>
    <h4>Task Details</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Name</dt>
        <dd class="col-sm-10">@Model.Task.Name</dd>

        <dt class="col-sm-2">Priority</dt>
        <dd class="col-sm-10">@Model.Task.Priority</dd>

        <dt class="col-sm-2">Status</dt>
        <dd class="col-sm-10">@Model.Task.Status</dd>
    </dl>

    <form method="post">
        <input type="hidden" asp-for="Task.Id" />

        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-page="/Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>